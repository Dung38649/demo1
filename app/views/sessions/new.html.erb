<h1>Đăng nhập</h1>
<% if notice %> 
    <div class="alert alert-danger" style="margin-left :240px; margin-right:40px"> <%= notice%></div>
<% end %>

<% if alert %> 
    <div class="alert alert-danger" style="margin-left :240px; margin-right:40px"> <%= alert%></div>
<% end %>
<%= form_tag sessions_path do %>

    <div class="form-group" style="padding:20px;margin-bottom:20px">
        <%= label_tag :"Mail hoặc tài khoản", nil, class: "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <%= text_field_tag :email, params[:email], class: "form-control", :placeholder=>"Nhập địa chỉ email hoặc tài khoản" %>
        </div>
    </div>

    <div class="form-group" style="padding:20px;margin-bottom:20px">
        <%= label_tag :"Password", nil, class: "control-label col-sm-2 text-right h4" %>
        <div class="col-sm-10">
            <%= password_field_tag :password,"", class: "form-control", :placeholder=>"Nhập địa chỉ email hoặc tài khoản" %>
        </div>
    </div>
    <div class="form-group" style="padding:20px;margin-left:1000px;margin-bottom:150px">
        <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Đăng nhập</button>
        </div>
    </div>

<% end %>